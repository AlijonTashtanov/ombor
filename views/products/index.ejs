        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <div class="card">
              <div class="card-header" style="display: flex; justify-content: space-between;">
                <div>
                  <h3 class="card-title">Mahsulotlar ro'yhati</h3>
                </div>
                <div></div>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
                  <div class="row" >
                    <div class="col-sm-12 col-md-6">
                      <form action="" method="post" id="filter" style="display: flex;justify-content: center;">
                        <div class="form-group" style="margin-right: 20px;">
                        <label for="category" style="display: block; margin-bottom: 5px; font-size: 16px;">Kategoriya</label>
                        <select name="category" id="category" class="select-box" style="width: 200px;height: 30px;  border: 1px solid #ccc; border-radius: 4px; font-size: 16px;">
                            <option value="">Tanlang</option>
                            <% categories.forEach(category => { %>
                                <option value="<%= category.ID %>"><%= category.NAME %></option>
                            <% }) %>
                        </select>
                      </div>
                      <div class="form-group" style="margin-right: 20px;">
                        <label for="brand" style="display: block; margin-bottom: 5px; font-size: 16px;">Brand</label>
                        <select name="brand" id="brand" class="select-box" style="width: 200px;height: 30px; border: 1px solid #ccc; border-radius: 4px; font-size: 16px;">
                            <option value="">Tanlang</option>
                            <% brands.forEach(brand => { %>
                                <option value="<%= brand.ID %>"><%= brand.NAME %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="form-group" style="margin-right: 20px;">
                        <label for="type" style="display: block; margin-bottom: 5px; font-size: 16px;">Turi</label>
                        <select name="type" id="type" class="select-box" style="width: 200px;height: 30px;  border: 1px solid #ccc; border-radius: 4px; font-size: 16px;">
                            <option value="">Tanlang</option>
                            <% types.forEach(type => { %>
                                <option value="<%= type.ID %>"><%= type.NAME %></option>
                            <% }) %>
                        </select>
                    </div>
                    </form>
                    
                    </div>
                    <div class="col-sm-12 col-md-6">
                      <div style="display: flex; justify-content: space-between;">
                        <div></div>
                        <div>
                          <a href="/add-product" class="btn btn-primary">
                            <i class="fa-solid fa-plus"></i> Qo'shish
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                  <hr />
                  <div class="row">
                    <div class="col-sm-12">
                      <table id="example1" class="table table-bordered table-striped">
                        <thead>
                          <tr>
                            <th>#ID</th>
                            <th>NOMI</th>
                            <th>CATEGORIYA</th>
                            <th>BRAND</th>
                            <th>TURI</th>
                            <th>USD</th>
                            <th>HARAKATLAR</th>
                          </tr>
                        </thead>
                        <tbody id="product-list"></tbody>
                       



                      </table>
                      <div id="pagination-controls" style="display: flex; align-items: center; justify-content: space-between; margin-top: 20px;">
                        <div></div>
                        <div>
                        <button id="prev-btn" style="padding: 8px 16px; margin: 0 5px; background-color: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer;" disabled>Oldingi</button>
                        <span id="current-page" style="margin: 0 10px; font-size: 16px;">1-Sahifa</span>
                        <button id="next-btn" style="padding: 8px 16px; margin: 0 5px; background-color: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer;">Keyingi</button>
                      </div>
                      </div>
                      
                      <script>
                        let currentPage = 1;
                        const limit = 100;
                      
                        document.getElementById("filter").addEventListener("change", fetchAndRenderProducts);
                        document.getElementById("prev-btn").addEventListener("click", () => {
                          if (currentPage > 1) {
                            currentPage--;
                            fetchAndRenderProducts();
                            console.log("unikal");
                          }
                        });
                        document.getElementById("next-btn").addEventListener("click", () => {
                          currentPage++;
                          fetchAndRenderProducts();
                        });
                      
                        async function fetchAndRenderProducts() {
                          const category = document.getElementById("category").value;
                          const brand = document.getElementById("brand").value;
                          const type = document.getElementById("type").value;
                      
                          // Send AJAX request with filter values and pagination
                          const response = await fetch("/prod", {
                            method: "POST",
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify({ category, brand, type, page: currentPage, limit }),
                          });
                          const data = await response.json();
                      
                          // Render table rows
                          const productTableBody = document.getElementById("product-list");
                          productTableBody.innerHTML = data
                            .map(
                              (product) => `
                                <tr>
                                  <td>${product.ID}</td>
                                  <td>${product.NAME} ${product.MODEL}</td>
                                  <td>${product.CATEGORY_NAME}</td>
                                  <td>${product.BRAND_NAME}</td>
                                  <td>${product.TYPE_NAME}</td>
                                  <td>${product.USD}</td>
                                  <td class="skip-export kv-align-center kv-align-middle w0" style="width:250px;" data-col-seq="6">
                                    <a href="/show-product/${product.ID}">
                                      <span class="btn btn-info">
                                        <i class="fas fa-eye"></i>
                                      </span>
                                    </a>
                                    <a href="/edit-product/${product.ID}">
                                      <span class="btn btn-warning">
                                        <i class="fas fa-pen"></i>
                                      </span>
                                    </a>
                                    <a href="/destroy-product/${product.ID}" class="btn btn-outline-danger" type="button" onclick="return confirm('Are you sure?')">
                                      <i class="fas fa-trash"></i>
                                    </a>
                                  </td>
                                </tr>
                              `
                            )
                            .join("");
                      
                          // Update pagination controls
                          document.getElementById("current-page").textContent = ` ${currentPage} - Sahifa`;
                          document.getElementById("prev-btn").disabled = currentPage === 1;
                          document.getElementById("next-btn").disabled = data.length < limit;
                        }
                      
                        // Initial fetch
                        fetchAndRenderProducts();
                      </script>
                      
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-body -->
            </div>
