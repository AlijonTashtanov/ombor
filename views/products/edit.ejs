  <body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
      <!-- Preloader -->

      <!-- Navbar -->
      <%- include('../partials/header') %>
      <!-- /.navbar -->

      <!-- Main Sidebar Container -->
      <%- include('../partials/sidebar') %>
      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <!-- /.col -->
              <div class="col-sm-6"></div>
              <!-- /.col -->
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <div class="row">
              <div class="col-md-12">
                <div class="card card-primary card-outline card-tabs">
                  <div class="card-header p-0 pt-1 border-bottom-0 m-3">
                    <!-- Card Header -->
                  </div>

                  <div class="card-body" style="padding: 0 40px">
                    <form
                      action="/update-product/<%= row.ID %>"
                      method="post"
                      enctype="multipart/form-data"
                      style="
                        padding: 20px;
                        border: 1px solid #ddd;
                        border-radius: 10px;
                      "
                    >
                      <!-- Product Name -->
                      <div class="row" style="margin-bottom: 15px">
                        <div class="col-md-6">
                          <label for="titleUz" style="font-weight: bold"
                            >Nomi</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="titleUz"
                            placeholder="Mahsulot nomini kiriting"
                            name="nomi"
                            value="<%= row ? row.NAME : '' %>"
                            style="
                              width: 100%;
                              border-radius: 5px;
                              padding: 10px;
                            "
                          />
                        </div>
                      </div>

                      <!-- Product Model and Price -->
                      <div class="row" style="margin-bottom: 15px">
                        <div class="col-md-6">
                          <label for="button_linkUz" style="font-weight: bold"
                            >Modeli</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="button_link"
                            placeholder="Modelini kiriting"
                            name="model"
                            value="<%= row.MODEL %>"
                            style="
                              width: 100%;
                              border-radius: 5px;
                              padding: 10px;
                            "
                          />
                        </div>
                        <div class="col-md-6">
                          <label for="sort_order" style="font-weight: bold"
                            >USD</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="sort_order"
                            placeholder="USD narxini kiriting"
                            name="usd"
                            value="<%= row.USD %>"
                            style="
                              width: 100%;
                              border-radius: 5px;
                              padding: 10px;
                            "
                          />
                        </div>
                      </div>

                      <!-- Image Upload Section -->
                      <!-- Image Upload Section -->
                      <div class="row" style="margin-bottom: 15px">
                        <% if (images && images.length > 0) { %> <%
                        images.forEach((image, index) => { %>
                        <div class="col-md-6" style="margin-bottom: 10px">
                          <label style="font-weight: bold">Rasm</label>
                          <img
                            src="/<%= image %>"
                            alt="Image"
                            style="width: 100px; height: 100px; margin: 5px"
                          />

                          <input
                            type="file"
                            name="new_image"
                            class="form-control"
                            style="border-radius: 5px; padding: 10px"
                            multiple
                          />
                        </div>
                        <% }); %> <% } else { %>
                        <p>No images available</p>
                        <% } %>
                      </div>

                      <button
                        type="button"
                        id="addImage"
                        class="btn btn-primary"
                        style="
                          margin-bottom: 15px;
                          border-radius: 5px;
                          padding: 10px;
                        "
                      >
                        <i class="fa fa-plus"></i> Yangi rasm
                      </button>
                      <div id="additionalImages"></div>
                      <!-- Dynamic Key-Value Pairs (Properties) -->
                      <% Object.keys(properties).forEach((key, i) => { %>
                      <div class="row" style="margin-bottom: 10px">
                        <div class="col-md-6">
                          <label
                            for="property_key_<%= i %>"
                            style="font-weight: bold"
                            >Property</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="property_key_<%= i %>"
                            name="new_keys"
                            value="<%= key %>"
                            style="border-radius: 5px; padding: 10px"
                          />
                        </div>
                        <div class="col-md-6">
                          <label
                            for="property_value_<%= i %>"
                            style="font-weight: bold"
                            >Value</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="property_value_<%= i %>"
                            name="new_values"
                            value="<%= properties[key] %>"
                            style="border-radius: 5px; padding: 10px"
                          />
                        </div>
                      </div>
                      <% }); %>

                      <!-- Button to Add New Property -->
                      <button
                        type="button"
                        id="addButton"
                        class="btn btn-primary"
                        style="
                          margin-bottom: 15px;
                          border-radius: 5px;
                          padding: 10px;
                        "
                      >
                        <i class="fa fa-plus"></i> Yangi xususiyat qo'shish
                      </button>

                      <div id="additionalInputs"></div>

                      <!-- JavaScript to dynamically add key-value pairs -->
                      <script>
                        document
                          .getElementById("addImage")
                          .addEventListener("click", function () {
                            const newRow = document.createElement("div");
                            newRow.classList.add("row", "mt-2");

                            // Create "Xususiyat" input
                            const keyCol = document.createElement("div");
                            keyCol.classList.add("col-md-6");
                            keyCol.innerHTML = `
                          <div class="form-group">
                            <label style="font-weight: bold;">Rasm</label>
                            <input type="file" class="form-control" name="new_image" placeholder="" style="width: 100%; border-radius: 5px; padding: 10px;" multiple>
                          </div>`;

                            // Create "Qiymat" input
                            //   const valueCol = document.createElement("div");
                            //   valueCol.classList.add("col-md-6");
                            //   valueCol.innerHTML = `
                            // <div class="form-group">
                            //   <label style="font-weight: bold;">Qiymat</label>
                            //   <input type="text" class="form-control" name="new_values[]" placeholder="Qiymat kiriting" style="width: 100%; border-radius: 5px; padding: 10px;">
                            // </div>`;

                            newRow.appendChild(keyCol);
                            // newRow.appendChild(valueCol);
                            document
                              .getElementById("additionalImages")
                              .appendChild(newRow);
                          });

                        document
                          .getElementById("addButton")
                          .addEventListener("click", function () {
                            const newRow = document.createElement("div");
                            newRow.classList.add("row", "mt-2");

                            // Create "Xususiyat" input
                            const keyCol = document.createElement("div");
                            keyCol.classList.add("col-md-6");
                            keyCol.innerHTML = `
                          <div class="form-group">
                            <label style="font-weight: bold;">Xususiyat</label>
                            <input type="text" class="form-control" name="new_keys" placeholder="Xususiyat kiriting" style="width: 100%; border-radius: 5px; padding: 10px;">
                          </div>`;

                            // Create "Qiymat" input
                            const valueCol = document.createElement("div");
                            valueCol.classList.add("col-md-6");
                            valueCol.innerHTML = `
                          <div class="form-group">
                            <label style="font-weight: bold;">Qiymat</label>
                            <input type="text" class="form-control" name="new_values" placeholder="Qiymat kiriting" style="width: 100%; border-radius: 5px; padding: 10px;">
                          </div>`;

                            newRow.appendChild(keyCol);
                            newRow.appendChild(valueCol);
                            document
                              .getElementById("additionalInputs")
                              .appendChild(newRow);
                          });
                      </script>

                      <!-- Save and Cancel Buttons -->
                      <div style="margin-top: 20px">
                        <button
                          type="submit"
                          class="btn btn-success"
                          style="
                            border-radius: 5px;
                            padding: 10px;
                            margin-right: 10px;
                          "
                        >
                          Saqlash
                        </button>
                        <a
                          href="javascript:history.back()"
                          class="btn btn-secondary"
                          style="border-radius: 5px; padding: 10px"
                        >
                          Qaytish
                        </a>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- /.content -->
      </div>
      <!-- /.content-wrapper -->

      <!-- Control Sidebar -->
      <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
      </aside>
      <!-- /.control-sidebar -->
    </div>
